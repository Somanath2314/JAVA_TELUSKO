<hibernate-configuration xmlns="http://www.hibernate.org/xsd/orm/cfg">
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5433/javalearnings</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">1234</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
<!--       update, if set to create it checks if there is any existing table, if yes it will drop and create one more-->

        <property name="hibernate.show_sql">true</property>
<!--        <property name="hibernate.format_sql">true</property>-->

<!--        some sql languages might change in little bit, like in some we use the varchar and in
            other we use text, so we need to mention which dialect we will be using and its not compulsory
-->
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>

    </session-factory>
</hibernate-configuration>